# Pinecone RAG API Configuration

# Required: Pinecone API Key (get from https://app.pinecone.io/)
PINECONE_API_KEY=your_pinecone_api_key_here

# Required: OpenAI API Key (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Required: Anthropic API Key (for AI responses)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Pinecone Index Name (default: management-knowledge)
PINECONE_INDEX_NAME=management-knowledge

# Optional: Preferred AI Provider (anthropic or openai)
PREFERRED_AI_PROVIDER=anthropic

# Optional: Port for local development
PORT=8000