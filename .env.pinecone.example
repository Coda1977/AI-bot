# Pinecone RAG API v2.0 Configuration (2025 API)

# Required: Pinecone API Key (get from https://app.pinecone.io/)
PINECONE_API_KEY=your_pinecone_api_key_here

# Required: Anthropic API Key (for AI responses)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: OpenAI API Key (backup AI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Pinecone Index Name (default: management-knowledge-v2)
PINECONE_INDEX_NAME=management-knowledge-v2

# Optional: Pinecone Namespace (default: management-knowledge)
PINECONE_NAMESPACE=management-knowledge

# Optional: Preferred AI Provider (anthropic or openai)
PREFERRED_AI_PROVIDER=anthropic

# Optional: Port for local development
PORT=8000